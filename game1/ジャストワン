            box-shadow: 0 2px 5px rgba(153, 153, 153, 0.5);
        }

        /* --- お題画面 --- */
        #gameScreen {
            display: none; /* 最初は非表示 */
        }

        #wordDisplay {
            font-size: 2.5rem;
            font-weight: bold;
            color: #4a90e2;
            background-color: #f0f8ff;
            padding: 40px 20px;
            border-radius: 15px;
            margin: 20px 0;
            min-height: 1.2em; /* 文字がなくても高さを維持 */
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* --- ホワイトボード画面 --- */
        #whiteboardScreen {
            display: none; /* 最初は非表示 */
        }

        #whiteboard {
            border: 2px solid #ccc;
            border-radius: 10px;
            cursor: crosshair;
            touch-action: none; /* canvas内のタッチ操作を優先 */
        }
        
        #whiteboardButtons {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 10px;
        }

